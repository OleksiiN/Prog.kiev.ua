public class MinMaxCalculator {
    public static void main(String[] args) {
        System.out.println(min(5, -2));
        System.out.println(max(5, -2));
    }

    public static int min(int a, int b) {
        return a > b ? b : a;
    }

    public static int max(int a, int b) {
        return a > b ? a : b;
    }
}
